.stretch-background {
  background: #a3765f url('<%= asset_path("background.png")%>') no-repeat;
  background-size: 100%;
  opacity: 0.70;
  filter: alpha(opacity=70);
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  margin: 0;
  padding: 0;
  z-index: 1;
  min-height: 100%;
  background-size: cover;
}