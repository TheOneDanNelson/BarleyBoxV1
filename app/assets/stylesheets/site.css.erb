body {
}

.stretch-background {
  background: #a3765f url('<%= asset_path("background.png")%>') no-repeat;
  background-size: 100%;
  opacity: 0.70;
  filter: alpha(opacity=70);
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  margin: 0;
  padding: 0;
  z-index: 1;
  min-height: 100%;
  background-size: cover;
}

.navbar .nav {
  float: right;
}

.filter {
  padding-bottom: 28px;
}
.filter label {
  font-size: 1.1em;
  padding-bottom: 6px;
}

.beer-grid {
  height: 284px;
  border-radius: 8px;
  background-color: #e1bca6;
  margin-bottom: 28px;
  text-align: center;
  padding: 10px 0px;
  margin: 20px 20px;
}

.beer-grid img {
  padding-top: 20px;
  display: block;
  margin: auto;
  max-width: 150px;
  max-height: 150px;
}

.beer-grid p {
  margin-bottom: -14px;
}

button {
  border-radius: 8px;
  padding: 6px 20px;
}

.well {
  border-radius: 12px;
/* opacity: 0.90;             * 
 * filter: alpha(opacity=90); */
}

.social {
  zoom: 1.5;
  -moz-transform: scale(1.5);
}

.input .string, .input .password, #user_date_of_birth {
  height: 2.4em;
  display: block;
}

.simple_form {
  display: block;
}
